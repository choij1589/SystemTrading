# Korea Investment & Securities API Credentials
# Copy this file to secrets.yaml and fill in your credentials

kis:
  # Real Trading Account
  real:
    app_key: "YOUR_APP_KEY_HERE"
    app_secret: "YOUR_APP_SECRET_HERE"
    account_number: "YOUR_ACCOUNT_NUMBER"
    account_code: "01"  # Usually "01" for stock account

  # Mock Trading Account (recommended for testing)
  mock:
    app_key: "YOUR_MOCK_APP_KEY_HERE"
    app_secret: "YOUR_MOCK_APP_SECRET_HERE"
    account_number: "YOUR_MOCK_ACCOUNT_NUMBER"
    account_code: "01"

# Default mode: "mock" or "real"
default_mode: "mock"
